extends layout

block content
  div.container
    table.table.table-striped(id="artifactInformation",data-toggle="table",data-filter-control=true)
      thead
        tr 
          th(data-field="name" data-filter-control="input") Name
          th Artifact Power
          th Artifact Weapon Level
      tbody.table-striped
        each character in characters
          tr(class=character.class)
            td
              p=character.name
            td
              p=character.artifactPower.toLocaleString()
            td
              p=character.artifactLevel
    script.
           $('#artifactInformation').DataTable({
               paging: false,
               searching: false,
               ordering: false,
               order: [[1,'dec']],
               fixedHeader : {
                   header: true,
                   footer: false
               }
          });